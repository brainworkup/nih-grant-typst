{
  "typst-lsp.rootPath": "${workspaceFolder}",
  "editor.formatOnSave": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "r.lsp.enabled": true,
  "r.rterm.mac": "/usr/local/bin/R",
  "[typst]": {
    "editor.defaultFormatter": "nvarner.typst-lsp"
  },
  "files.associations": {
    "*.typ": "typst"
  },
  "typst-preview.preview.updateDebounceWait": 200,
  "typst-preview.compiler.includeEnvironmentVariables": true
}
